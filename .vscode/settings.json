{
    // Herramientas de compilación
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": ["%DOCFILE%"]
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-xelatex",
                "%DOC%"
            ]
        }
    ],

    // Recetas de compilación
    "latex-workshop.latex.recipes": [
        {
            "name": "XeLaTeX",
            "tools": ["xelatex"]
        },
        {
            "name": "XeLaTeX + Biber",
            "tools": ["xelatex", "biber", "xelatex", "xelatex"]
        },
        {
            "name": "latexmk (XeLaTeX)",
            "tools": ["latexmk"]
        }
    ],

    // Abrir PDF dentro de VS Code
    "latex-workshop.view.pdf.viewer": "tab",

    // Limpiar auxiliares antes de compilar
    "latex-workshop.latex.clean.enabled": true,
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.fls",
        "*.log",
        "*.fdb_latexmk"
    ],

    // Mostrar errores y advertencias en VS Code
    "latex-workshop.message.error.show": true
}